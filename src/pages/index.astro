---
import Unixui from "@/components/Unixui.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <div
    class="absolute hidden w-full mt-10 border-b border-blue-500 border-dashed md:block"
  >
  </div>
  <main
    class="flex items-center justify-center h-screen max-w-5xl px-2 mx-auto my-0 border-blue-500 border-dashed select-none border-x"
  >
    <section class="space-y-5 text-center">
      <div>
        <h1
          class="text-6xl font-bold text-transparent md:text-7xl lg:text-8xl bg-gradient-to-tl to-blue-500 from-zinc-900 bg-clip-text"
        >
          Â¡Hello Unix!
        </h1>
      </div>
      <div class="flex flex-wrap items-center justify-center gap-4">
        <a
          href="https://github.com/unix-orgs"
          class="px-4 py-2 text-sm font-medium transition-colors border rounded-md md:text-lg border-zinc-800 hover:bg-zinc-800"
        >
          GitHub
        </a>
        <a
          href="https://discord.com"
          class="px-4 py-2 text-sm font-medium transition-colors bg-blue-500 rounded-md md:text-lg hover:bg-blue-500/80"
        >
          Nuestro Comunidad
        </a>
      </div>
      <Unixui />
    </section>
  </main>
  <div
    class="absolute hidden w-full -mt-10 border-b border-blue-500 border-dashed md:block"
  >
  </div>
</Layout>
